{
  "$schema": "./.vscode/schemas/package.schema.json",
  "name": "word-statistics-ru-en-cn",
  "version": "0.3.0",
  "private": true,
  "description": "Dev tooling for Obsidian plugin: Word statistics RU EN CN",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HappyToy010101/obsidian-word-statistics-RU-EN-CN.git"
  },
  "homepage": "https://github.com/HappyToy010101/obsidian-word-statistics-RU-EN-CN#readme",
  "bugs": {
    "url": "https://github.com/HappyToy010101/obsidian-word-statistics-RU-EN-CN/issues"
  },
  "dependencies": {
    "segmentit": "^2.0.0"
  },
  "scripts": {
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "typecheck:watch": "tsc -p tsconfig.json --noEmit --watch",
  "build": "npm run typecheck && esbuild main.ts --bundle --platform=browser --format=cjs --external:obsidian --outfile=main.js --minify",
    "build:watch": "esbuild main.ts --bundle --platform=browser --format=cjs --external:obsidian --outfile=main.js --watch --sourcemap",
    "dict:optimize": "node scripts/optimize-dictionaries.js",
    "dict:stats": "node scripts/optimize-dictionaries.js --stats"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "typescript": "^5.6.3",
    "esbuild": "^0.21.5"
  }
}
